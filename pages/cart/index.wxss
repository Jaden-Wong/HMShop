page {
  padding-bottom: 110rpx;
}
checkbox .wx-checkbox-input {
  width: 34rpx;
  height: 34rpx;
  border-radius: 50%;
}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #eb4450;
  border-color: #eb4450;
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 20rpx;
  height: 20rpx;
  line-height: 20rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}
.cart .addAdress button {
  width: 100vw;
  color: #666;
  font-size: 32rpx;
  font-weight: 500;
}
.cart .addAdress button text:nth-child(1) {
  padding-right: 10rpx;
}
.cart .goods-list {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f8f8f8;
  height: 220rpx;
}
.cart .goods-list .check {
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 15rpx;
}
.cart .goods-list .goods-img {
  flex: 3;
  padding-right: 30rpx;
}
.cart .goods-list .right {
  flex: 6;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 100%;
}
.cart .goods-list .right .gname {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.cart .goods-list .right .right-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart .goods-list .right .right-bottom .price {
  color: var(--themeColor);
  font-weight: 700;
}
.cart .goods-list .right .right-bottom .operations {
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart .goods-list .right .right-bottom .operations button {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  width: 60rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-weight: 700;
  background-color: #fff;
}
.cart .goods-list .right .right-bottom .operations text {
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #eee;
  border-radius: 10rpx;
}
.cart .tools {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100vw;
  height: 110rpx;
  background-color: #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 30rpx;
}
.cart .tools .tools-left {
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart .tools .tools-right {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.cart .tools .tools-right .sum-price {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
}
.cart .tools .tools-right .sum-price .sum-price-item {
  color: #eb4450;
  font-weight: 700;
  font-size: 32rpx;
}
.cart .tools .tools-right .sum-price view:nth-child(2) {
  font-size: 24rpx;
}
.cart .tools .tools-right .pay {
  width: 200rpx;
  margin-left: 10rpx;
  background-color: #eb4450;
  text-align: center;
  height: 100%;
  line-height: 110rpx;
  color: #fff;
  font-weight: 700;
}
.cart-empty {
  width: 100vw;
  height: 100vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #666;
  font-size: 34rpx;
}
.cart-empty button {
  margin-top: 20rpx;
  background-color: #eb4450;
  color: #fff;
}
